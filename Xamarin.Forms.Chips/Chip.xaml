<?xml version="1.0" encoding="UTF-8"?>
<Frame
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="clr-namespace:Xamarin.Forms.Chips.Converters"
    xmlns:controls="clr-namespace:Xamarin.Forms.Chips"
    HasShadow="False"
    CornerRadius="15"
    VerticalOptions="Center"
    HorizontalOptions="Center"
    Padding="8, 5"
    Margin="0, 0"
    x:DataType="controls:Chip"
    x:Class="Xamarin.Forms.Chips.Chip"
    x:Name="chipRoot">

    <Frame.Resources>
        <ResourceDictionary>
            <converters:HasValueConverter x:Key="HasValueConverter" />
        </ResourceDictionary>
    </Frame.Resources>

    <Frame.GestureRecognizers>
        <TapGestureRecognizer Tapped="Clicked" />
    </Frame.GestureRecognizers>

    <Frame.Content>
        <StackLayout
            Orientation="Horizontal"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
            <Image
                Source="{Binding Image, Source={x:Reference chipRoot}}"
                IsVisible="{Binding Image, Source={x:Reference chipRoot}, Converter={StaticResource HasValueConverter}}"
                d:IsVisible="False" />
            
            <Label
                Text="{Binding Text, Source={x:Reference chipRoot}}"
                IsVisible="{Binding Text, Source={x:Reference chipRoot}, Converter={StaticResource HasValueConverter}}"
                d:Text="Chip"
                FontFamily="{Binding FontFamily, Source={x:Reference chipRoot}}"
                FontSize="{Binding FontSize, Source={x:Reference chipRoot}}"
                TextColor="{Binding TextColor, Source={x:Reference chipRoot}}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center" />

            <Image
                Source="{Binding CloseImage, Source={x:Reference chipRoot}}"
                IsVisible="{Binding CloseImage, Source={x:Reference chipRoot}, Converter={StaticResource HasValueConverter}}"
                d:IsVisible="False">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="CloseButton_Clicked" />
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </Frame.Content>
</Frame>
